letras_menu = #212c4b
activo =  #005db4

//importe de la fuente de íconos
@font-face 
  font-family 'FontAwesome'
  src url('../fonts/fontawesome-webfont.eot')
  src url('../fonts/fontawesome-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/fontawesome-webfont.woff') format('woff'), url('../fonts/fontawesome-webfont.ttf') format('truetype'), url('../fonts/fontawesome-webfont.svg#fontawesomeregular') format('svg');
  font-weight normal
  font-style normal
//Importen de fuentes de texto
@font-face
	font-family Futura
	font-style normal
	src url("../fonts/futura_medium_bt-webfont.ttf")
	
@font-face
	font-family HelveticaBold
	font-style normal
	src url("../fonts/HelveticaLTStd-BoldCond_0.otf")
   
@font-face
	font-family HelveticaB
	font-style normal
	src url("../fonts/HelveticaLTStd-Cond_0.otf")
//Final de Fuentes de texto

//Parámetros globales	
html
	width 100%
	height 100%
	margin 0 auto
	padding 0
body
	width 100%
	height 100%
	margin 0 auto
	padding 0
	max-width 1366px
	.active
		a 
			color activo
	a
		text-decoration none
		font-family Futura
		font-size 1em
		color letras_menu
	ul
		margin 0
		padding 0
		list-style none
	li
		margin 0
		padding 0
		list-style none		
	.main_wrapper
		width 100%
		height auto
		margin 0 auto
		display flex
		header
			order 1
			width 100%
			max-width 1366px
			height auto
			background-color white
			position fixed
			overflow hidden
			z-index 70
			.menu
				width 100%
				height 87.55px
				.menu_contenedor
					width 76.6%
					height 100%
					margin 0 auto
					display flex
					flex-direction row
					#resp-menu
						display none
					label
						display none
					.logo
						flex-basis 28%
						height 100%
						.logo_menu
							width 100%
							height 100%
							margin 0 auto
							cursor pointer
							img
								width 100%
								height 92%
					.options
						flex-basis 72%
						height 100%
						.bar_menu
							width 86.85%
							height auto
							margin 0 auto
							margin-right 0%
							.opciones
								width auto
								display inline-block
								margin-left 3.3%
								line-height 125px
								&:hover //efecto de las opciones
									a
										border-bottom 3px solid #80d443
										color #80d443
										transition all 0.3s		
		footer 
			flex-basis 100%
			order 3
			height 200px
			background #005db4
			.foot_option //contenedor de Enlaces
				position relative
				width 70%
				height auto
				margin 0 17% auto
				line-height 20px
				.option //Enlaces Principales
					width 33.33%
					display inline-block
					vertical-align top
					text-align left
					color white	
					margin-top 3%
					ul //Contenedor de enlaces secundarios
						margin-top 5%
						li
							text-align left
							a
								font-family HelveticaB
					span
						i
							display inline-block
							margin-right 3%
						a
							font-size 1.3em
							letter-spacing 0px
					a
						font-family HelveticaBold
						color white
						font-weight normal
						font-size 0.9em
						&:hover
							color #80d443
							transition all 0.55s
							i
								color white
				#contacto
					position absolute
					right 0px
					
@media screen and (min-width: 768px) and (max-width: 1099px)
	
	#head
		.menu
			.menu_contenedor
				margin-left 13%
				.opciones
					margin-left 2.3%
				a
					font-size 0.6em
					
@media screen and (min-width: 320px) and (max-width: 767px)

	#head
		overflow visible
		.menu
			.menu_contenedor
				position relative
				width 100%
				height 100%
				margin 0 auto
				display flex
				flex-flow row wrap
				label
					position absolute
					display block
					width auto
					right 10%
					top 50%
					font-size 1.6em
					cursor pointer
				#resp-menu:checked ~ .options
					transform translateX(0%)
				.logo
					order 1
					flex-basis 70%
					height 100%
					.logo_menu
						width 90%
						height 100%
						margin 0 auto
						cursor pointer
						img
							width 100%
							height 92%
				.options
					position absolute
					width 100%
					height auto
					left 0%
					top 99px
					background-color white
					transform translateX(-100%)
					transition all 0.55s
					.bar_menu
						width 100%
						.opciones
							width 100%
							display block
							margin-left 0%
							line-height normal
							text-align center
	#foot 
		.foot_option //contenedor de Enlaces
			position relative
			width 90%
			height auto
			margin 0 auto
			margin-left 25px
			line-height 20px
			.option //Enlaces Principales
				width 32%
				margin-top 35px
				span
					a
						font-size 0.8em
						letter-spacing 0px
				a
					font-family HelveticaBold
					color white
					font-weight normal
					font-size 0.5em
					&:hover
						color #80d443
						transition all 0.55s
						i
							color white
			#contacto
				position relative
				margin-left 5px
			#mapa
				margin-left -10px 
				
@media screen and (min-width: 1100px) and (max-width: 1285px)
	
	#head
		.menu
			.menu_contenedor
				a
					font-size 0.85em